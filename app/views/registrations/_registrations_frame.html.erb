<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <hgroup>
    <h1>Create an account</h1>
    <h2>Already a member? <%= link_to "Sign In", "/users/sign_in", id: 'sign-in-link' %></h2>
  </hgroup>

  <%= hidden_field_tag 'redirect_to', params[:redirect_to] %>

  <%= error_messages_for(@user) %>
  <div class="messages"></div>

  <p class="field">
    <%= f.label :full_name, "Full Name" %>
    <%= f.text_field :full_name, :autocomplete => "off" %>
  </p>

  <p class="field">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, :autocomplete => "off" %>
  </p>

  <% if @user.password_required? %>
    <p class="field">
      <%= f.label :password, "New Password" %>
      <%= f.password_field :password, :autocomplete => "off" %>
    </p>
  <% end %>

  <p class="field">
    <%= f.label :zipcode_str, "Primary Zip Code" %>
    <%= f.text_field :zipcode_str, value: session[:zipcode] || (resource.zipcode && resource.zipcode.number) %>
  </p>

  <p class="sign_up"><%= f.submit "Create Account", :class => "btn secondary" %></p>

  <div class="or"><span>or</span></div>

  <p class="facebook"><%= link_to 'Sign Up with Facebook', "/auth/facebook" %></p>
<% end %>
<div class="loading_spinner"></div>
