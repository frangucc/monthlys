<% content_for(:title) { 'Forgot your password?' } %>

<h1>Forgot your password?</h1>

<div id="devise-ajax-messages"></div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'modal-ajax forgot-password' }) do |f| %>

  <%= error_messages_for(resource) %>

  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.submit 'Send me reset password instructions', class: 'btn secondary' %>
<% end %>
